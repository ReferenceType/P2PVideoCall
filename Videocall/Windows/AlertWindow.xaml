<Window x:Class="Videocall.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videocall"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="AlertWindow" Height="140" Width="200">
    <Grid Background="#131313">
        <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Height="19" Width="18" Background="IndianRed" Click="CloseButtonClicked" Margin="0,5,5,0" WindowChrome.IsHitTestVisibleInChrome="True" />
        <Button Content="Accept" HorizontalAlignment="Left" Margin="10,99,0,0" VerticalAlignment="Top" Width="90" Click="AcceptBtnClicked" Height="21"/>
        <Button Content="Reject" HorizontalAlignment="Left" Margin="109,99,0,0" VerticalAlignment="Top" Width="81" Click="RejectBtnClicked" Height="21"/>
        <TextBlock x:Name="InfoText" Style="{StaticResource WhiteText}" HorizontalAlignment="Center" Margin="0,24,0,0" TextWrapping="Wrap"
                   Text="Someone is calling you would you like to aswer?" VerticalAlignment="Top" Height="70" Width="180"/>

    </Grid>
</Window>
