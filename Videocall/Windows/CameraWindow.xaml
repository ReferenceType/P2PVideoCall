        <CheckBox Content="Cam" HorizontalAlignment="Left" Margin="221,7,0,0" VerticalAlignment="Top"
                     IsChecked="{Binding CameraChecked,Mode=TwoWay}" WindowChrome.IsHitTestVisibleInChrome="True"/>-->



    </Grid>

</Window>
